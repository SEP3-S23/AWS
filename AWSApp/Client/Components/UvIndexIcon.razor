<img src=@src   style="width: 10vh; height: 10vh;" />

@code {

    [Parameter]
    public double HeatIndex { get; set; } = 0;
    private string src { get; set; }
    
    
    
    protected override void OnAfterRender(bool firstRender)
    {
        GetPath();
    }
    
    
    private void GetPath()
    {
        int heatIndexInt = Convert.ToInt32(HeatIndex);
        
        heatIndexInt %= 11;
        heatIndexInt++;
        
        src = "https://bmcdn.nl/assets/weather-icons/v3.0/line/svg/uv-index-"+System.Math.Abs(heatIndexInt)+".svg";
    }

}