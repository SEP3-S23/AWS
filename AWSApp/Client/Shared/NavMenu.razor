@using global::Shared.Model
@inject IJSRuntime JSRuntime

<MudNavMenu Rounded="true" Margin="Margin.Dense" Color="Color.Primary" Class="pa-2"  >
    <MudNavLink Href="" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
    <MudNavLink Href="Forums" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Forum">Forums</MudNavLink>  
     <MudNavLink Href="CreateForum" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.CreateNewFolder">Create Forum</MudNavLink>  
</MudNavMenu>

@code
{
    
    private async Task<string> GetTokenFromLocalStorage()
    {
        return await JSRuntime.InvokeAsync<string>("localStorage.getItem", "token");
    }
    

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            LocalToken.Instance.token =  await GetTokenFromLocalStorage();
        }
    }
}
